generator client {
  provider = "prisma-client-js"
  // output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  favorites Favorite[] // ‚Üê Add this line
}

model Favorite {
  id         Int     @id @default(autoincrement())
  movieId    Int
  title      String
  posterPath String?
  overview   String?
  user       User    @relation(fields: [userId], references: [id])
  userId     Int

  @@unique([userId, movieId])
}
